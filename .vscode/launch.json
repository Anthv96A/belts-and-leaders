{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Unit Tests",
            "runtimeArgs": [
                "--inspect",
                "--inspect-brk",
                "-i"
            ],
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceRoot}",
            "protocol": "inspector",
            "port": 9229,
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
  }
